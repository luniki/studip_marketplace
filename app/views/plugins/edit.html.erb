<h2>Editing plugin</h2>

<% semantic_form_for @plugin, :html => {:multipart => true} do |form| %>
  <%= form.error_messages %>
  <% form.inputs do %>
    <%= form.input :name, :input_html => {:disabled => true},
                          :wrapper_html => { :class => "quiet" } %>
    <%= form.input :description %>
    <%= form.input :homepage %>
    <%= form.input :screenshot %>

    <%= form.input :category %>
  <% end %>
  <% form.buttons do %>
    <%= form.commit_button "Update" %>
  <% end %>
<% end %>

<%= link_to t(:back), @plugin %>
