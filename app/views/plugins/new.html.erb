<h2>New plugin</h2>

<% semantic_form_for @plugin, :html => {:multipart => true} do |form| %>
  <%= form.error_messages %>
  <% form.semantic_fields_for :release do |release| %>
    <% release.inputs do %>
      <%= release.input :package, :as => :file %>
    <% end %>
  <% end %>
  <% form.buttons do %>
    <%= form.commit_button "Create" %>
  <% end %>
<% end %>
<%= link_to 'Back', plugins_path %>

