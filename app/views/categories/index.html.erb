<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%=h category.name %></td>
    <td><%= link_to 'Show', category %></td>
    <td><%= link_to 'Edit', edit_category_path(category)  if permitted_to? :update, :categories %></td>
    <td><%= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete  if permitted_to? :delete, :categories %></td>
  </tr>
<% end %>
</table>

<br />

<% permitted_to? :create, :categories do %>
  <%= link_to 'New category', new_category_path %>
<% end %>

